{
    "extends": [
        "config:recommended"
    ],
    "enabledManagers": [
        "helm-values",
        "helmv3",
        "regex"
    ],
    "pinDigests": true,
    "prHourlyLimit": 5,
    "prConcurrentLimit": 5,
    "timezone": "Europe/Berlin",
    "assignees": [
        "slydlake"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "^charts/wireguard/Chart\\.yaml$"
            ],
            "matchStrings": [
                "appVersion:\\s+['\"]?(?<currentValue>\\d+\\.\\d+\\.\\d+(?:-r\\d+-ls\\d+)?)['\"]?"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "linuxserver/wireguard",
            "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-r(?<prerelease>\\d+)-ls(?<build>\\d+))?$",
            "extractVersionTemplate": "^(?<version>.+)$"
        },
        {
            "fileMatch": [
                "^charts/.*/Chart\\.yaml$"
            ],
            "matchStrings": [
                "- name: [^\\n]+\\s+image: docker\\.io/(?<depName>[^:]+):(?<currentValue>[^\\s]+)"
            ],
            "datasourceTemplate": "docker",
            "versioningTemplate": "docker"
        }
    ],
    "packageRules": [
        {
            "matchManagers": [
                "helm-values",
                "regex"
            ],
            "matchPackageNames": [
                "linuxserver/wireguard",
                "/^docker\\.io\\/linuxserver\\/wireguard$/"
            ],
            "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-r(?<prerelease>\\d+)-ls(?<build>\\d+))?$",
            "groupName": "linuxserver/wireguard",
            "description": "Handle linuxserver wireguard updates with full version including -rX-lsY suffix"
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "matchPackageNames": [
                "/^docker\\.io\\/.+/"
            ],
            "versioning": "docker",
            "labels": [
                "dependencies",
                "renovate"
            ],
            "commitMessagePrefix": "[{{{ replace \"docker.io/\" \"\" packageName }}}]",
            "commitMessageAction": "chore(deps): update"
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "versioning": "docker",
            "labels": [
                "dependencies",
                "renovate"
            ],
            "commitMessagePrefix": "[{{{ packageName }}}]",
            "commitMessageAction": "chore(deps): update"
        },
        {
            "matchManagers": [
                "helmv3"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "labels": [
                "dependencies",
                "renovate",
                "helm-chart"
            ],
            "commitMessagePrefix": "[helm]",
            "commitMessageAction": "chore(deps): update chart dependencies"
        }
    ]
}