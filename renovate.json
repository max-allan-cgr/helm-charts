{
    "extends": [
        "config:recommended"
    ],
    "enabledManagers": [
        "helm-values",
        "helmv3"
    ],
    "pinDigests": true,
    "prHourlyLimit": 5,
    "prConcurrentLimit": 5,
    "timezone": "Europe/Berlin",
    "assignees": [
        "slydlake"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchPackageNames": [
                "linuxserver/wireguard",
                "/^docker\\.io\\/linuxserver\\/wireguard$/"
            ],
            "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-r(?<prerelease>\\d+)-ls(?<build>\\d+))?$",
            "description": "Handle linuxserver wireguard tags with -rX-lsY suffix"
        },
        {
            "matchManagers": [
                "helmv3"
            ],
            "matchFileNames": [
                "charts/wireguard/Chart.yaml"
            ],
            "extractVersion": "^(?<version>.+)$",
            "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-r(?<prerelease>\\d+)-ls(?<build>\\d+))?$",
            "description": "Preserve full linuxserver wireguard version in Chart.yaml appVersion including -rX-lsY suffix"
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "matchPackageNames": [
                "/^docker\\.io\\/.+/"
            ],
            "labels": [
                "dependencies",
                "renovate"
            ],
            "commitMessagePrefix": "[{{{ replace \"docker.io/\" \"\" packageName }}}]",
            "commitMessageAction": "chore(deps): update"
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "labels": [
                "dependencies",
                "renovate"
            ],
            "commitMessagePrefix": "[{{{ packageName }}}]",
            "commitMessageAction": "chore(deps): update",
            "matchPackageNames": [
                "!/^docker\\.io\\/.+/"
            ]
        },
        {
            "matchManagers": [
                "helm-values"
            ],
            "matchPackageNames": [
                "lusotycoon/apache-exporter",
                "/^docker\\.io\\/lusotycoon\\/apache-exporter$/"
            ],
            "allowedVersions": "/^v[0-9]+\\.[0-9]+\\.[0-9]+$/",
            "automerge": false,
            "groupName": "apache-exporter updates (v-prefixed semver)"
        },
        {
            "matchManagers": [
                "helmv3"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "labels": [
                "dependencies",
                "renovate",
                "helm-chart"
            ],
            "commitMessagePrefix": "[helm]",
            "commitMessageAction": "chore(deps): update chart dependencies"
        }
    ]
}